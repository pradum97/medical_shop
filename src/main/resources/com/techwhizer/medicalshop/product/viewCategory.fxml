<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="551.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.techwhizer.medicalshop.controller.product.ViewCategory">
    <top>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" top="5.0" />
            </BorderPane.margin>
            <children>
                <HBox alignment="BOTTOM_CENTER" spacing="20.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label alignment="CENTER" text="CATEGORY : " textAlignment="CENTER">
                                    <font>
                                        <Font name="Arial Black" size="10.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets left="5.0" />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="categoryNameTF" onKeyPressed="#enterPress" onKeyReleased="#enterPress" prefHeight="42.0" prefWidth="320.0" promptText="Enter Category Name :" style="-fx-border-color: grey; -fx-border-radius: 2;" />
                            </children>
                        </VBox>
                      <Button mnemonicParsing="false" onAction="#addCategory" style="-fx-cursor: hand; -fx-background-color: BLUE; -fx-text-fill: WHITE; -fx-background-radius: 3; -fx-font-family: arial;" text="ADD CATEGORY">
                          <padding>
                              <Insets bottom="6.0" left="8.0" right="8.0" top="6.0" />
                          </padding>
                          <font>
                              <Font name="System Bold" size="12.0" />
                          </font>
                     <HBox.margin>
                        <Insets bottom="8.0" />
                     </HBox.margin>
                      </Button>
                    </children>
                    <padding>
                        <Insets left="30.0" right="30.0" />
                    </padding>
                </HBox>
                <Separator prefWidth="200.0">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Separator>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="tableView" editable="true" focusTraversable="false" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                        <TableColumn fx:id="colSrNo" editable="false" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" sortable="false" text="SL #" />
                        <TableColumn fx:id="colCName" maxWidth="300.0" minWidth="300.0" prefWidth="300.0" sortable="false" text="CATEGORY" />
                        <TableColumn fx:id="colAction" editable="false" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" sortable="false" text="ACTION" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </StackPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" fillHeight="false" BorderPane.alignment="CENTER">
            <children>
                <Pagination fx:id="pagination" visible="false" />
            </children>
        </HBox>
    </bottom>
