<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.techwhizer.medicalshop.controller.product.dealer.AllDealer">
   <top>
      <HBox alignment="CENTER_RIGHT" style="-fx-border-color: transparent transparent gray transparent;" BorderPane.alignment="CENTER">
         <children>
            <Button focusTraversable="false" mnemonicParsing="false" onAction="#addSupplier" style="-fx-background-radius: 3; -fx-border-radius: 3; -fx-background-color: BLUE; -fx-text-fill: WHITE; -fx-cursor: HAND; -fx-font-weight: bold;" text="+ ADD SUPPLIER">
               <HBox.margin>
                  <Insets right="40.0" />
               </HBox.margin></Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="15.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <VBox fx:id="contentContainer" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TableView fx:id="tableView" editable="true" focusTraversable="false" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="colSrNo" maxWidth="50.0" minWidth="50.0" prefWidth="75.0" text="Sr No" />
                            <TableColumn fx:id="colName" minWidth="120.0"  text="SUPPLIER NAME " />
                              <TableColumn fx:id="colPhone" minWidth="120.0"  text="SUPPLIER PHONE" />
                              <TableColumn fx:id="colEmail" minWidth="120.0"  text="SUPPLIER EMAIL" />
                              <TableColumn fx:id="colDl" minWidth="120.0"  text="DRUG LICENCE" />
                              <TableColumn fx:id="colGstNum" minWidth="120.0"  text="GST NUMBER" />
                              <TableColumn fx:id="colAddress" minWidth="120.0"  text="ADDRESS" />
                              <TableColumn fx:id="colState" minWidth="90.0"  text="STATE" />
                              <TableColumn fx:id="colDate" minWidth="100.0"  text="DATE" />
                              <TableColumn fx:id="colAction" minWidth="60.0" text="ACTION" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </VBox>
                  <VBox fx:id="progressBar" alignment="CENTER" VBox.vgrow="ALWAYS">
                     <children>
                        <ProgressIndicator />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
