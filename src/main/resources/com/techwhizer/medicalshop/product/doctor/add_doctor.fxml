            fx:controller="com.techwhizer.medicalshop.controller.product.doctor.AddDoctor">
   <center>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="478.0" prefWidth="704.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="506.0" prefWidth="586.0" spacing="10.0" style="-fx-background-color: white;">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Label text="DOCTOR DETAILS">
                           <font>
                              <Font name="Bodoni MT Bold" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Separator prefWidth="200.0" />
                  <VBox spacing="15.0">
                     <children>
                        <HBox spacing="30.0">
                           <children>
                              <VBox prefWidth="269.0" spacing="5.0">
                                 <children>
                                    <Label text="DOCTOR NAME * :">
                                       <font>
                                          <Font name="Arial Black" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="nameTf" minHeight="40.0" onKeyPressed="#keyPress" promptText="Enter doctor name" style="-fx-border-color: grey; -fx-border-radius: 3;" />
                                 </children>
                              </VBox>
                              <VBox layoutX="10.0" layoutY="10.0" prefWidth="269.0" spacing="5.0">
                                 <children>
                                    <Label text="PHONE :">
                                       <font>
                                          <Font name="Arial Black" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="phoneTf" minHeight="40.0" onKeyPressed="#keyPress" promptText="XXXXXXXXX12" style="-fx-border-color: grey; -fx-border-radius: 3;" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox spacing="30.0">
                           <children>
                              <VBox prefWidth="269.0" spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="ADDRESS :">
                                       <font>
                                          <Font name="Arial Black" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="addressTf" minHeight="60.0" onKeyPressed="#keyPress" prefHeight="60.0" prefWidth="526.0" promptText="Enter address" style="-fx-border-color: grey; -fx-border-radius: 3;" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox spacing="30.0">
                           <children>
                              <VBox prefWidth="269.0" spacing="5.0">
                                 <children>
                                    <Label text="REG. NO. :">
                                       <font>
                                          <Font name="Arial Black" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="regNoTf" minHeight="40.0" onKeyPressed="#keyPress" promptText="Enter Registration number" style="-fx-border-color: grey; -fx-border-radius: 3;" />
                                 </children>
                              </VBox>
                              <VBox layoutX="10.0" layoutY="10.0" prefWidth="269.0" spacing="5.0">
                                 <children>
                                    <Label text="SPECIALITY :">
                                       <font>
                                          <Font name="Arial Black" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="specialityTf" minHeight="40.0" onKeyPressed="#keyPress" promptText="specility" style="-fx-border-color: grey; -fx-border-radius: 3;" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox spacing="30.0">
                           <children>
                              <VBox prefWidth="269.0" spacing="5.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="QUALIFICATION :">
                                       <font>
                                          <Font name="Arial Black" size="12.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="qualificationTf" onKeyPressed="#keyPress" prefHeight="58.0" prefWidth="526.0" promptText="Enter quanlification" style="-fx-border-color: grey; -fx-border-radius: 3;" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#cancelBn" prefHeight="30.0" prefWidth="146.0" style="-fx-background-color: red; -fx-background-radius: 3;" text="CANCEL" textFill="WHITE">
                                 <font>
                                    <Font name="Arial Bold" size="13.0" />
                                 </font>
                              </Button>
                              <Button fx:id="submitBn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#submitBn" prefHeight="30.0" prefWidth="146.0" style="-fx-background-color: blue; -fx-background-radius: 3;" text="SUBMIT" textFill="WHITE">
                                 <font>
                                    <Font name="Arial Bold" size="13.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
