<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.techwhizer.medicalshop.controller.dashboard.InvoiceReport">
    <center>
        <AnchorPane>
            <children>
                <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <VBox fx:id="contentContainer" VBox.vgrow="ALWAYS">
                            <children>
                                <TableView fx:id="tableView" focusTraversable="false" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colSrNo" maxWidth="60.0" minWidth="60.0" prefWidth="60.0"
                                                     text="Sr No"/>
                                        <TableColumn fx:id="colCusName" minWidth="150.0" prefWidth="-1.0"
                                                     text="CUSTOMER NAME"/>
                                        <TableColumn fx:id="colCusPhone" maxWidth="130.0" minWidth="140.0"
                                                     prefWidth="100.0" text="CUSTOMER PHONE"/>
                                        <TableColumn fx:id="colTotItems" maxWidth="90.0" minWidth="90.0"
                                                     prefWidth="90.0" text="TOTAL ITEMS"/>
                                        <TableColumn fx:id="colBillType" maxWidth="100.0" minWidth="100.0"
                                                     prefWidth="100.0" text="BILL TYPE"/>
                                        <TableColumn fx:id="colDate" maxWidth="130.0" minWidth="120.0" prefWidth="130.0"
                                                     text="DATE"/>
                                        <TableColumn fx:id="colInvoice" minWidth="150.0" prefWidth="136.0"
                                                     text="INVOICE NUM"/>
                                        <TableColumn fx:id="colAction" minWidth="180.0" prefWidth="-1.0" text="#"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <Pagination fx:id="pagination" visible="false"/>
                            </children>
                        </VBox>
                        <VBox fx:id="progressBar" alignment="CENTER">
                            <children>
                                <ProgressIndicator/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </center>

    <top>
        <VBox style="-fx-border-color: transparent transparent gray transparent;" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <children>
                <HBox alignment="CENTER" style="-fx-border-color: transparent transparent gray transparent;">
                    <children>
                        <Label lineSpacing="1.0" text="INVOICE" textAlignment="CENTER">
                            <font>
                                <Font name="Arial Black" size="17.0"/>
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="8.0" top="5.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <children>
                        <HBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label layoutX="185.0" layoutY="21.0" text="FROM">
                                    <font>
                                        <Font name="Arial" size="14.0"/>
                                    </font>
                                </Label>
                                <DatePicker fx:id="fromDateP" editable="false" focusTraversable="false"
                                            prefHeight="40.0" promptText="DD-MM-YYYY" showWeekNumbers="true"
                                            style="-fx-background-radius: 1; -fx-border-radius: 1; -fx-border-color: gray;">
                                    <cursor>
                                        <Cursor fx:constant="HAND"/>
                                    </cursor>
                                </DatePicker>
                                <Label text="TO">
                                    <font>
                                        <Font name="Bookman Old Style" size="14.0"/>
                                    </font>
                                </Label>
                                <DatePicker fx:id="toDateP" editable="false" focusTraversable="false" layoutX="10.0"
                                            layoutY="17.0" prefHeight="40.0" promptText="DD-MM-YYYY"
                                            showWeekNumbers="true"
                                            style="-fx-background-radius: 1; -fx-border-radius: 1; -fx-border-color: gray;">
                                    <cursor>
                                        <Cursor fx:constant="HAND"/>
                                    </cursor>
                                </DatePicker>
                                <Button fx:id="searchReportBn" focusTraversable="false" mnemonicParsing="false"
                                        onAction="#searchInvoice" prefHeight="35.0" prefWidth="81.0"
                                        style="-fx-cursor: hand; -fx-background-color: #008080; -fx-text-fill: WHITE; -fx-background-radius: 2; -fx-border-radius: 2;"
                                        text="SUBMIT">
                                    <font>
                                        <Font name="Arial Bold" size="12.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" fillHeight="false" spacing="15.0">
                            <children>
                                <HBox alignment="CENTER_RIGHT" fillHeight="false">
                                    <children>

                                        <HBox alignment="CENTER" fillHeight="false">
                                            <children>
                                                <ComboBox fx:id="searchTypeC" focusTraversable="false" minWidth="40.0"
                                                          prefHeight="40.0" prefWidth="80.0"
                                                          style="-fx-background-radius: 1;  -fx-border-color: gray transparent  gray gray;"/>
                                                <TextField fx:id="searchTf" alignment="CENTER" focusTraversable="false"
                                                           minWidth="40.0" prefHeight="40.0" prefWidth="210.0"
                                                           style="-fx-background-color: transparent; -fx-text-inner-color: BLACK; -fx-border-color: gray gray  gray transparent; -fx-background-radius: 1;"
                                                           HBox.hgrow="ALWAYS"/>
                                            </children>
                                            <HBox.margin>
                                                <Insets/>
                                            </HBox.margin>
                                        </HBox>
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER" fillHeight="false" minHeight="30.0" onMouseClicked="#bnRefresh"
                                      prefHeight="38.0" prefWidth="60.0"
                                      style="-fx-cursor: hand; -fx-background-color: RED; -fx-background-radius: 3;">

                                    <ImageView fitHeight="15.0" fitWidth="15.0" onMouseClicked="#bnRefresh">
                                        <Image url="@../img/icon/refresh_ic.png"/>
                                        <HBox.margin>
                                            <Insets left="7.0" right="7.0"/>
                                        </HBox.margin>
                                    </ImageView>
                                    <HBox.margin>
                                        <Insets/>
                                    </HBox.margin>
                                </HBox>
                            </children>
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="1.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>


</BorderPane>
