<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="main_container" prefWidth="700.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.techwhizer.medicalshop.Dashboard">

    <left>
        <VBox alignment="TOP_CENTER" prefHeight="340.0" prefWidth="200.0" style="-fx-background-color: #006666;" BorderPane.alignment="TOP_CENTER">
            <children>
                <VBox alignment="TOP_CENTER" spacing="12.0">
                    <children>

                        <ImageView fx:id="userImage" fitHeight="65.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@img/Avatar/avtar_3.png" />
                            </image>
                        </ImageView>

                        <Label fx:id="fullName" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="PRADUM KUMAR" wrapText="true">
                     <font>
                        <Font name="Arial Black" size="13.0" />
                     </font></Label>
                        <Label fx:id="userRole" layoutX="44.0" layoutY="110.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="ADMIN" wrapText="true">
                     <font>
                        <Font name="Arial" size="14.0" />
                     </font></Label>
                        <Line endX="15.2929048538208" endY="0.09290238469839096" startX="-100.0" stroke="WHITE" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="8.0" />
                    </padding>
                </VBox>
                <ScrollPane fx:id="menuScrollSide" fitToWidth="true" pannable="true" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
               <content>
                  <VBox alignment="TOP_CENTER" fillWidth="false">
                     <children>
                        <VBox spacing="10.0" style="-fx-background-color: transparent;">
                           <children>
                              <Hyperlink fx:id="homeBn" onAction="#homeBnClick" text="HOME">
                                 <graphic>
                                    <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@img/menu_icon/home_icon.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Hyperlink>
                              <Hyperlink fx:id="myProductBn" layoutX="80.0" layoutY="221.0" onAction="#myProductBnClick" text="MY PRODUCTS">
                                 <graphic>
                                    <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@img/menu_icon/shop_icon.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Hyperlink>

                               <Hyperlink fx:id="stockH" layoutX="80.0" layoutY="221.0" onAction="#stockReport" text="STOCK">
                                   <graphic>
                                       <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                           <image>
                                               <Image url="@img/menu_icon/stock_ic.png" />
                                           </image>
                                       </ImageView>
                                   </graphic>
                               </Hyperlink>

                              <Hyperlink fx:id="saleProduct" layoutX="80.0" layoutY="245.0" onAction="#saleProductBnClick" text="SALE PRODUCTS">
                                 <graphic>
                                    <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@img/menu_icon/sell_ic.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Hyperlink>
                              <Hyperlink fx:id="saleReportBn" layoutX="80.0" layoutY="269.0" onAction="#saleReportBnClick" text="SALES REPORT">
                                 <graphic>
                                    <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@img/menu_icon/viewReport_icon.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Hyperlink>

                              <Hyperlink fx:id="returnProductBn" layoutX="80.0" layoutY="317.0" onAction="#returnProductBnClick" text="RETURN PRODUCT">
                                 <graphic>
                                    <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@img/menu_icon/return_ic.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Hyperlink>
                              <Hyperlink fx:id="invoiceBn" layoutX="80.0" layoutY="341.0" onAction="#invoiceBnClick" text="INVOICE">
                                 <graphic>
                                    <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@img/menu_icon/invoice_ic.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Hyperlink>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content>
                </ScrollPane>
                <VBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
                    <children>
                        <Button fx:id="bn_logout" alignment="BOTTOM_CENTER" focusTraversable="false" graphicTextGap="8.0" onAction="#bnLogout" style="-fx-cursor: hand; -fx-background-color: #ff0000; -fx-background-radius: 2;" text="LOGOUT" textAlignment="CENTER" textFill="WHITE">
                            <graphic>
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@img/menu_icon/logout_ic.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                     <font>
                        <Font name="Arial Rounded MT Bold" size="12.0" />
                     </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="15.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </left>
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <StackPane fx:id="contentArea" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            </children>
        </AnchorPane>
    </center>
   <top>
      <VBox alignment="CENTER_RIGHT" style="-fx-background-color: #006666;" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <HBox VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets right="50.0" />
               </VBox.margin>
               <children>
                  <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="dateL" style="-fx-text-fill: white;" visible="false">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Arial Black" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" fillHeight="false" spacing="20.0">
                     <children>
                        <Label alignment="CENTER" graphicTextGap="8.0" onMouseClicked="#addProductBnClick" prefHeight="27.0" prefWidth="127.0" style="-fx-background-color: white; -fx-border-radius: 3; -fx-background-radius: 3; -fx-border-color: black; -fx-cursor: hand;" text="ITEM ENTRY" textAlignment="CENTER">
                           <font>
                              <Font name="Arial Bold" size="12.0" />
                           </font>
                           <graphic>
                              <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@img/icon/add_ic_black.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Label>
                        <Label alignment="CENTER" layoutX="10.0" layoutY="10.0" onMouseClicked="#addPurchase" prefHeight="27.0" prefWidth="155.0" style="-fx-background-color: white; -fx-border-radius: 3; -fx-background-radius: 3; -fx-border-color: black; -fx-cursor: hand;" text="PURCHASE ENTRY" textAlignment="CENTER">
                           <font>
                              <Font name="Arial Bold" size="12.0" />
                           </font>
                           <graphic>
                              <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@img/icon/add_ic_black.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Label>
                        <HBox alignment="CENTER" spacing="15.0">
                           <children>
                              <MenuButton fx:id="settingMenuButton" mnemonicParsing="false">
                                 <graphic>
                                    <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@img/menu_icon/settings_ic.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </MenuButton>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
         </padding>
      </VBox>
   </top>

</BorderPane>
