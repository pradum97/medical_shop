<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.techwhizer.medicalshop.controller.user.Users">
    <children>
        <HBox alignment="CENTER_RIGHT">

            <Button alignment="CENTER" maxHeight="40.0" minHeight="35.0" onAction="#bn_addUsers" prefHeight="35.0" prefWidth="177.0" style="-fx-cursor: hand;-fx-background-color: blue;-fx-text-fill: white;-fx-font-weight: bold" styleClass="addProductBtn" text="+    ADD USER">
                <HBox.margin>
                    <Insets bottom="20.0" right="30.0" top="20.0" />
                </HBox.margin>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding></Button>

        </HBox>

        <TableView fx:id="user_table_view" focusTraversable="false" AnchorPane.leftAnchor="10.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="col_id"  prefWidth="60" editable="false" reorderable="false" sortable="false" styleClass="table-column" text="ID" />
                <TableColumn fx:id="col_username" editable="false" prefWidth="120" reorderable="false" sortable="false" styleClass="table-column" text="USERNAME" />
                <TableColumn fx:id="col_FirstName" editable="false" prefWidth="140" reorderable="false" sortable="false" styleClass="table-column" text="FIRST NAME" />
                <TableColumn fx:id="col_LastName" editable="false" prefWidth="140" reorderable="false" sortable="false" styleClass="table-column" text="LAST NAME" />
                <TableColumn fx:id="col_gender" editable="false" prefWidth="65" reorderable="false" sortable="false" styleClass="table-column" text="GENDER" />
                <TableColumn fx:id="col_email" editable="false" minWidth="180.0" prefWidth="-1.0" reorderable="false" sortable="false" styleClass="table-column" text="EMAIL" />
                <TableColumn fx:id="col_phone" editable="false" prefWidth="128.60003662109375" reorderable="false" sortable="false" styleClass="table-column" text="PHONE" />
                <TableColumn fx:id="col_role" editable="false" prefWidth="93.800048828125" reorderable="false" sortable="false" styleClass="table-column" text="ROLE" />
                <TableColumn fx:id="col_address" editable="false" prefWidth="106.0" reorderable="false" sortable="false" styleClass="table-column" text="ADDRESS" />
                <TableColumn fx:id="col_account_status" editable="false" prefWidth="106.0" reorderable="false" sortable="false" styleClass="table-column" text="AC STATUS" />
                <TableColumn fx:id="action" editable="false" maxWidth="125.0" prefWidth="125.0" reorderable="false" sortable="false" style="-fx-alignment: center;" styleClass="table-column" text="Action" />
            </columns>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
        </TableView>

    </children>
</VBox>
